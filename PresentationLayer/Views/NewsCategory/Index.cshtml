<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                
                    <div style="position:fixed;top:0;font-family:'Arial, Helvetica, sans-serif'" id="button-list">
                        <button style="position:relative;top:120px;width:200px" type="button" class="btn btn-primary" value="category" data-toggle="collapse" data-target="#button-toggle" style="position:relative;top:40px">Category</button>
                        <div id="button-toggle" class="collapse">
                            <div style="position:relative;top:120px" class="btn-group-vertical">
                                <button style="width:200px" type="button" id="btn" class="btn btn-primary">Green</button>
                                <button style="width:200px" type="button" id="btn1" class="btn btn-primary">World</button>
                                <button style="width:200px" type="button" id="btn2" class="btn btn-primary">South Africa</button>
                                <button style="width:200px" type="button" id="btn3" class="btn btn-primary">Africa</button>
                                <button style="width:200px" type="button" id="btn4" class="btn btn-primary">Top Stories</button>
                            </div>
                        </div>
                    </div>
                
            </div>
                <div class="col-md-10">

                    <div id="list-position">
                        <ul id="list"></ul>
                    </div>

                </div>
            </div>
</div>
