        <script type="text/javascript">
            $('#btn').click(function () {
                $.ajax({
                    type: 'GET',
                    url: 'http://localhost:65516/api/NewsFeed/Green',
                    dataType: 'json',
                    success: function (data) {
                        $('#list').empty();
                        $.each(data, function (i, item) {
                            var rows = "<li>" + "<img style='width: 100px;height:100px;' src=" + item.Image + ">" + "<a target=_blank href=" + item.Link + "> <strong> " + item.Title + " </strong> </a>" + "<em>" + item.Description + " " + "<mark>" + item.Pub_Date + "</mark>" + "</em>" + "</li>";
                            $('#list').append(rows);
                        });
                    }
